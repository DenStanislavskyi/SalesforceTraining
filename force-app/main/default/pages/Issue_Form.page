<apex:page standardController="Case" showHeader="false" standardStylesheets="false">


    <style>


        .required:after {
            content: " *";
            color: red;
        }

        displNone {
            display: none;
        }

        .thankYouPage {
            border-radius: 5px;
            background-color: #f6f6f6;
            padding: 20px;
            width: 50%;
            margin: auto;
            font-size: 25px;
        }

        /* Style inputs with type="text", select elements and textareas */
        input[type=text], select, textarea {
            width: 100%; /* Full width */
            padding: 12px; /* Some padding */
            border: 1px solid #ccc; /* Gray border */
            border-radius: 4px; /* Rounded borders */
            box-sizing: border-box; /* Make sure that padding and width stays in place */
            margin-top: 6px; /* Add a top margin */
            margin-bottom: 16px; /* Bottom margin */
            resize: vertical /* Allow the user to vertically resize the textarea (not horizontally) */
        }

        /* Style the submit button with a specific background color etc */
        input[type=submit] {
            background-color: #04AA6D;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        /* When moving the mouse over the submit button, add a darker green color */
        input[type=submit]:hover {
            background-color: #45a049;
        }

        /* Add a background color and some padding around the form */
        .container {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
        }

    </style>
    <body>

    <!--  ----------------------------------------------------------------------  -->
    <!--  NOTE: Please add the following <META> element to your page <HEAD>.      -->
    <!--  If necessary, please modify the charset parameter to specify the        -->
    <!--  character set of your HTML page.                                        -->
    <!--  ----------------------------------------------------------------------  -->

    <META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8"/>

    <!--  ----------------------------------------------------------------------  -->
    <!--  NOTE: Please add the following <FORM> element to your page.             -->
    <!--  ----------------------------------------------------------------------  -->
    <div id="container" class="container">

        <form id="myFormId" action="https://webto.salesforce.com/servlet/servlet.WebToCase?encoding=UTF-8"
              method="POST">

            <input type="hidden" name="orgid" value="00D7Q000000HNSZ"/>
            <input type="hidden" name="retURL"
                   value="https://universalcontainercomp-developer-edition.eu44.force.com/IssueForm/ThankYou"/>

            <!--  ----------------------------------------------------------------------  -->
            <!--  NOTE: These fields are optional debugging elements. Please uncomment    -->
            <!--  these lines if you wish to test in debug mode.                          -->
            <!--  <input type="hidden" name="debug" value=1>                              -->
            <!--  <input type="hidden" name="debugEmail"                                  -->
            <!--  value="dstanislavskyi@gmail.com">                                       -->
            <!--  ----------------------------------------------------------------------  -->

            <center>
                <!-- <apex:image url="{!$Resource.UCLogo}"/>
                <apex:image url="{!URLFOR($Resource.UCLogo)}"/>-->
                <img src="{!$Resource.UCLogo}" width="20%"/>
                <h1>Universal Container Issue Form</h1>
            </center>


            <apex:pageMessages/>
            <h2>Issue Information</h2>

            <label for="subject" class="required">Subject</label><input id="subject" maxlength="80" name="subject"
                                                                        size="20" type="text" required="true"/><br/>

            <label for="description">Description</label><textarea name="description"></textarea><br/><br/>

            <label for="recordType">Issue Selection</label><select id="recordType" name="recordType" required="true">
                <option value="0127Q000000xb1k">Invoice Request</option>
                <option value="0127Q000000xb1p">Invoice Correction</option>
                <option value="0127Q000000xbeQ">Support Question</option>
                <option value="0127Q000000xbeL">Change Request</option>
                <option value="0127Q000000xbea">Delivery Complaint</option>
                <option value="0127Q000000xbef">Missing/Damaged Goods</option>
                <option value="0127Q000000xbek">Complaint Other</option>
                <option value="0127Q000000xbeV">Other</option>
            </select><br/>

            Preferred Language:<select id="00N7Q000004wsW5" name="00N7Q000004wsW5" title="Preferred Language"
                                       required="true">

                <option value="English">English</option>
                <option value="German">German</option>
                <option value="Chinese">Chinese</option>
                <option value="French">French</option>
                <option value="Italian">Italian</option>
                <option value="Portuguese">Portuguese</option>
            </select><br/>

            <div style="display:none">

                <label for="priority">Priority</label><select id="priority" name="priority">
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                    <option value="Low">Low</option>
                </select><br/>
            </div>
            Reservation number:<input id="00N7Q000004xozF" maxlength="40" name="00N7Q000004xozF" size="20" type="text"/><br/>
            <h2>Contact Information</h2>

            <label for="name" class="required">Full name</label><input id="name" maxlength="80" name="name" size="20"
                                                                       type="text" required="true"/><br/>

            <label for="email" class="required">Email</label><input id="email" maxlength="80" name="email" size="20"
                                                                    type="text" required="true"/><br/>

            <label for="phone">Phone</label><input id="phone" maxlength="40" name="phone" size="20" type="text"/><br/>

            <input type="submit" name="submit"

                   class="slds-button slds-button_brand"/>


        </form>
        <div id="thank-you" class='thankYouPage'>
            <center>
                <apex:image url="{!$Resource.UCLogo}"/>
                <br/>
                <h3>Thank you for submitting your issue to us online.</h3><br/>
                <h3>Our Agent will contact you within the next 24 hours.</h3>
            </center>
        </div>
    </div>
    </body>
    <script>

        let params = new URLSearchParams(window.location.search);

        if (params.get("success")) {
            document.getElementById('container').style.display = 'none';
            //window.open('https://universalcontainercomp-developer-edition.eu44.force.com/IssueForm/ThankYou', '_blank');

        } else {
            document.getElementById('thank-you').style.display = 'none';
        }
    </script>

</apex:page>